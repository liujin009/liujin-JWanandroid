<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/empty_view"
    android:background="@color/base_bg_color">
    
    <ImageView
        android:id="@+id/empty_retry_view"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/ic_no_network"/>
    
    <TextView
        android:id="@+id/status_hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_100"
        android:text="@string/status_network"
        android:layout_below="@+id/empty_retry_view" />

</RelativeLayout>